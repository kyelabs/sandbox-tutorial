doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title #{title}
    link(rel='preconnect' href='https://fonts.googleapis.com')
    link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin)
    link(rel='stylesheet', href='https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300..900;1,300..900&display=swap')
    script window.DATA = !{JSON.stringify(tables)}
    script(src="/bundle.js", type="module")
  body
    header
      img#logo(src='/logo.png')
      a Learn
    main
      #lesson
        .header
          span.chapter= chapter.title
          span  / 
          span.title= title
        .content !{content}
        if links.next.path
          a.next(href='/'+links.next.path) Next: #{links.next.title}
      #sandbox
        #tabs
          button#run(disabled) Loading...
        #editor
          pre #{models[0].code}
        #tables.ag-theme-quartz-dark
    footer
      if links.prev.path
        a.prev(href='/'+links.prev.path) ← Previous
      else 
        a.prev
      
      if links.next.path
        a.next(href='/'+links.next.path) Next →
      else 
        a.next